---
import { studies } from "../../../const/const";
---

<section class="section_studies">
  <div class="linear-grandient-1"></div>
  <div class="content_studies">
    <h3 class="title-studies" id="studies">Experiencia</h3>
    <ul class="ul-studies">
      {studies.map(({ date, title, corporation, description }) => (
        <li class="li-studies">
          <span class="circle" />
          <div class="study-content">
            <div class="study-header">
              <div class="header-left">
                <h3>{title}</h3>
                <br>
                <br>
                <span class="date">{date}</span>
              </div>
              <div class="header-right">
                <p class="description">{description}</p>
              </div>
            </div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>


<style>
  .section_studies {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  background-color: #111111;
  justify-content: center;
  align-items: center;
  padding-left: 50px; /* Ajusta este valor según tus necesidades */
}

.linear-grandient-1 {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(73, 1, 190, 0.5), #000);
  z-index: 0;
}

.content_studies {
  position: relative;
  z-index: 1;
  width: 90%;
  height: 100%;
  margin: 0 auto;
  padding: 20px 0;
  max-width: 1355px;
  margin-left: 20px; /* Ajusta este valor según tus necesidades */
}

.title-studies {
  font-size: 27px;
  color: #f6f6f9;
  text-align: left;
  width: 100%;
  font-weight: 800;
  scroll-margin-top: 80px;
  padding: 20px 0;
}

.ul-studies {
  padding: 30px 10px;
  display: flex;
  flex-direction: column;
}

.li-studies {
  padding: 0px 20px;
  color: #f6f6f9;
  border-left: 1px solid #f6f6f9;
  list-style: none;
  position: relative;
  padding-bottom: 50px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.circle {
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  left: -5px;
  top: 5px;
  background-color: #f6f6f9;
}

.study-content {
  width: 100%;
}

.study-header {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.header-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  max-width: 600px; /* Ajusta este valor según tus necesidades */
  word-wrap: break-word; /* Asegura que el texto largo se ajuste */
  margin-right: 200px; /* Ajusta este valor según tus necesidades */
}

.study-header h3 {
  font-weight: 200;
  margin: 0;
}

.study-header p {
  margin: 0;
}

.description {
  margin-top: 5px;
}

.date {
  font-size: 13px;
}


</style>
